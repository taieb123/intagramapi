<T3DataStructure>
	<sheets>
		<!--
			################################
			  SHEET General Settings
			################################
		-->
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:instagramapi/Resources/Private/Language/locallang_db.xlf:flexforms_tab</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
				<switchableControllerActions>
						<TCEforms>
							<label>Select Action</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items>
									<numIndex index="0">
										<numIndex index="0">Instagram Plugin</numIndex>
										<numIndex index="1">Instagramapi->instagram</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</switchableControllerActions>
                    <!-- startingpoint -->
					<settings.nbrItemsDesktop>
						<TCEforms>
							<label>LLL:EXT:instagramapi/Resources/Private/Language/locallang_db.xlf:flexforms_tab.nbr_item_desktop</label>
							<config>
								<type>input</type>
								<size>2</size>
							</config>
						</TCEforms>
					</settings.nbrItemsDesktop>
					<settings.nbrItemsMobile>
						<TCEforms>
							<label>LLL:EXT:instagramapi/Resources/Private/Language/locallang_db.xlf:flexforms_tab.nbr_item_mobile</label>
							<config>
								<type>input</type>
								<size>2</size>
							</config>
						</TCEforms>
					</settings.nbrItemsMobile>
					<settings.startingpoint>
						<TCEforms>
							<label>LLL:EXT:instagramapi/Resources/Private/Language/locallang_db.xlf:flexforms_tab.startingpoint</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>3</size>
								<maxitems>50</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
										<default>
											<searchWholePhrase>1</searchWholePhrase>
										</default>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.startingpoint>
				</el>
			</ROOT>
		</sDEF>

			<!--
					################################
					  SHEET paginate
					################################
				-->
		<paginate>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:instagramapi/Resources/Private/Language/locallang_db.xlf:flexforms_paginate</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
				<!-- Hide pagination -->
					<settings.hidePagination>
						<TCEforms>
							<label>LLL:EXT:instagramapi/Resources/Private/Language/locallang_db.xlf:flexforms_paginate.activate</label>
							<config>
								<type>check</type>
							</config>
						</TCEforms>
					</settings.hidePagination>
					<!-- Limit Start -->
					<settings.start_nombre>
						<TCEforms>
							<label>LLL:EXT:instagramapi/Resources/Private/Language/locallang_db.xlf:flexforms_paginate.start_nombre</label>
							<config>
								<type>input</type>
								<size>5</size>
								<eval>num</eval>
							</config>
						</TCEforms>
					</settings.start_nombre>

					<!-- Offset -->
					<settings.item_per_pagination>
						<TCEforms>
							<label>LLL:EXT:instagramapi/Resources/Private/Language/locallang_db.xlf:flexforms_paginate.item_per_pagination</label>
							<config>
								<type>input</type>
								<size>5</size>
								<eval>num</eval>
							</config>
						</TCEforms>
					</settings.item_per_pagination>
				</el>
			</ROOT>
		</paginate>
	</sheets>
</T3DataStructure>